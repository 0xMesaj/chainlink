{
  "name": "@chainlink/contracts",
  "version": "0.1.6",
  "description": "Smart contracts and their language abstractions for chainlink",
  "repository": "https://github.com/smartcontractkit/chainlink",
  "author": "Chainlink devs",
  "license": "MIT",
  "private": false,
  "scripts": {
    "compile": "belt compile all",
    "compile:ovm": "yarn belt compile all-ovm --config app.config.ovm.json",
    "compile:clean": "yarn clean && yarn compile && yarn compile:ovm",
    "setup": "yarn compile:clean && tsc -b tsconfig.test.json tsconfig.ethers.json",
    "clean": "tsc -b --clean tsconfig.test.json tsconfig.ethers.json && rm -rf abi ethers truffle",
    "pretest": "tsc -b --clean tsconfig.ethers.json",
    "lint:sol": "solhint -f table ./src/**/**/*.sol",
    "test:reset": "yarn setup && yarn test",
    "test": "yarn test:evm",
    "test:evm": "jest --testTimeout 80000 --forceExit --detectOpenHandles --testRegex 'test/.*(?<!-ovm)/.*.(spec|test).(js|ts)?$'",
    "test:ovm": "env USE_OVM=true jest --testTimeout 1600000 --forceExit --detectOpenHandles --testRegex 'test/.*-ovm/.*.(spec|test).(js|ts)?$'",
    "test:ci": "jest --testTimeout 80000 --forceExit --detectOpenHandles",
    "test:ci:old": "yarn test:ci v0.4 && yarn test:ci v0.5",
    "prepublishOnly": "yarn clean && yarn setup"
  },
  "devDependencies": {
    "@chainlink/belt": "0.0.4",
    "@chainlink/test-helpers": "0.0.6",
    "@types/jest": "^26.0.8",
    "@types/node": "^13.9.1",
    "ethers": "^4.0.45",
    "jest": "^26.6.3",
    "solhint": "^3.2.1",
    "ts-jest": "^26.5.0",
    "typescript": "^4.1.3"
  },
  "files": [
    "abi/**/*",
    "ethers/**/*",
    "src/**/*",
    "truffle/**/*",
    "app.config.json"
  ],
  "optionalDependencies": {
    "@truffle/contract": "^4.2.29",
    "ethers": "^4.0.45"
  }
}
