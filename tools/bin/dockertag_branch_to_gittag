#!/bin/bash

set -e

if [ -z "$2" ]
then
  exit 0 # No tag, skip.
fi

#
# Specifically for CircleCI. Retag smartcontract/chainlink:latest to smartcontract/chainlink:0.9.1
#
BRANCH_TAG=`tools/bin/branch2tag ${1}` # ie: develop or latest
export DOCKER_TAG=`tools/bin/gittag2dockertag ${2}` # aka GIT_TAG, i.e 0.9.1
docker tag smartcontract/explorer:${BRANCH_TAG} smartcontract/explorer:${DOCKER_TAG}
